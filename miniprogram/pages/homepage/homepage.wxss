/* miniprogram/pages/homepage/homepage.wxss */
.note {
  position: absolute;
  bottom: -90rpx;
  right: 40rpx;
  color: gray;
}

/* 卡片 */
.self-card {
  display: flex;
  flex-direction: row;
}

.self-date {
  font-size: 40rpx;
}

.self-content {
  width: 600rpx;
  position: relative;
}

.self-content image {
  width: 200rpx;
  height: 200rpx;
}

.self-content text {
  position: absolute;
  top: 0;
  margin-left: 10rpx;
  width: 300rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}